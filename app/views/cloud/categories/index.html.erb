<%= render "search"%>

<div class="layui-card-header">
  <%= link_to_icon "新增", new_cloud_category_path %>
</div>

<div class="layui-card-body layui-table-body layui-table-main">
  <table class="layui-table layui-form">
    <thead>
      <tr>
        <th>序号</th>
        <th>类别名称</th>
        <th>类别编号</th>
        <th>创建日期</th>
        <th>操作</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each_with_index do |category, index|%>
        <tr id="category_<%= category.id%>">
          <td><%= index + 1%></td>
          <td><%= category.name %></td>
          <td><%= category.code %></td>
          <td><%= category.created_at %></td>
          <td class="td-manage x-admin-sm">
            <%= link_to_icon "编辑", edit_cloud_category_path(category)%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @categories%>